<div class= "session_form">
  <% if flash[:alert] %>
    <p id = "notice"><%= flash[:alert] %></p>
  <% end %>

  <%= form_tag do %>
    <fieldset>
      <legend>Please Log In </legend>

      <div>
        <%= label_tag :name, 'Username' %>
        <%= text_field_tag :name, params[:name] %>
      </div>

      <div>
        <%= label_tag :password, 'Passowrd' %>
        <%= password_field_tag :password, params[:password] %>
      </div>

      <div>
        <%= submit_tag "Login", class: 'btn-success'%>
      </div>
    </fieldset>
  <% end %>
</div>
